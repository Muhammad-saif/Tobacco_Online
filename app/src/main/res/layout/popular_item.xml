<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popImg"
            android:layout_width="220dp"
            android:layout_height="160dp"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_grey_bordersolid"
            android:src="@mipmap/dokha"/>

        <TextView
            android:id="@+id/popName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:text="Popular Product"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/popDes"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Description"
            android:fontFamily="@font/alice"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:rating="3"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="#FFCC01" />

            <TextView
                android:id="@+id/popRat"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:text="3.0"
                android:textColor="#9F18E3"
                android:layout_weight="1"
                android:fontFamily="@font/alice"/>

            <TextView
                android:id="@+id/popDis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Discount 20%off"
                android:layout_weight="3"
                android:fontFamily="@font/alice"
                android:textColor="#9F18E3"
                android:textStyle="bold"
                android:gravity="end"/>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>